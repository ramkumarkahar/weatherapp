          <p id="date" class="col">30 aug</p>
        </div>
        <div class="main_layer">
          <p id="city">get output here</p>
          <div class="middle_layer data_hide">
            <p id="temp"><span>0</span><sup>0</sup>C</p>
            <p id="temp_status"><i class="fa fa-cloud" arial-hidden="true"></i></p>
          </div>
        </div>
